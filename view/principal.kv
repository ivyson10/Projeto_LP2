<Principal>:

    MDBottomNavigation:
        id: Menu
        MDBottomNavigationItem:
            name: 'Principal'
            text: "Principal"
            icon: "bank"
            BoxLayout:
                orientation: 'vertical'
                padding: 10, -20, 10, 30
                spacing: 20
                
        MDBottomNavigationItem:
            name: 'Cliente'
            text: "Cliente"
            icon: "face"
            BoxLayout:
                orientation: 'horizontal'
                padding: 20, -20, 20, 30
                spacing: 20
                MDTextField:
                    id: nome
                    hint_text: 'CPF'
                    multiline: False
                    pos_hint: {'center_x': 0.8, 'center_y': 0.85}
                MDRaisedButton:
                    text: 'Procurar'
                    size_hint: None, None
                    pos_hint: {'center_x': 0.8, 'center_y': 0.85}
            BoxLayout:
                orientation: 'vertical'
                padding: 10,100,10,10
                MDFloatingActionButton:
                    id:                    float_act_btn
                    icon:                'plus'
                    opposite_colors:    True
                    elevation_normal:    8
                    pos_hint:            {'center_x': .95, 'top': 1.0}
                    on_press: root.manager.current = 'cadastrocliente'
                    
        MDBottomNavigationItem:
            name: 'Vendedor'
            text: "Vendedor"
            icon: 'face'
            BoxLayout:
                orientation: 'horizontal'
                padding: 20, -20, 20, 30
                spacing: 20
                MDTextField:
                    id: nome
                    hint_text: 'CPF'
                    multiline: False
                    pos_hint: {'center_x': 0.8, 'center_y': 0.85}
                MDRaisedButton:
                    text: 'Procurar'
                    size_hint: None, None
                    pos_hint: {'center_x': 0.8, 'center_y': 0.85}
            BoxLayout:
                orientation: 'vertical'
                padding: [10,100,10,10] 
                MDFloatingActionButton:
                    id:                    float_act_btn
                    icon:                'plus'
                    opposite_colors:    True
                    elevation_normal:    8
                    pos_hint:            {'center_x': .95, 'top': 1.0}
                    on_press: root.manager.current = 'cadastrovendedor'
                    
        MDBottomNavigationItem:
            name: 'Fornecedor'
            text: "Fornecedor"
            icon: 'truck'
            id: bottom_navigation_desktop_1
            BoxLayout:
                orientation: 'horizontal'
                padding: 20, -20, 20, 30
                spacing: 20
                MDTextField:
                    id: nome
                    hint_text: 'CPF'
                    multiline: False
                    pos_hint: {'center_x': 0.8, 'center_y': 0.85}
                MDRaisedButton:
                    text: 'Procurar'
                    size_hint: None, None
                    pos_hint: {'center_x': 0.8, 'center_y': 0.85}
            BoxLayout:
                orientation: 'vertical'
                padding: [10,100,10,10] 
                MDFloatingActionButton:
                    id:                    float_act_btn
                    icon:                'plus'
                    opposite_colors:    True
                    elevation_normal:    8
                    pos_hint:            {'center_x': .95, 'top': 1.0}
                    on_press: root.manager.current = 'cadastrofornecedor'
        MDBottomNavigationItem:
            name: 'Settings'
            text: "Configurações"
            icon: 'settings'
            id: bottom_navigation_desktop_2
            ScrollView:
                do_scroll_x: False
                MDList:
                    id: ml
                    OneLineListItem:
                        text: 'Change theme'
                        on_press: MDThemePicker().open()
                            
                