#:import MDBottomNavigation kivymd.tabs.MDBottomNavigation
#:import MDBottomNavigationItem kivymd.tabs.MDBottomNavigationItem
#:import OneLineIconListItem kivymd.list.OneLineIconListItem
#:import OneLineAvatarIconListItem kivymd.list.OneLineAvatarIconListItem
<Principal>:

    MDBottomNavigation:
        id: Menu
        MDBottomNavigationItem:
            name: 'Cliente'
            text: "Cliente"
            icon: "face"
            BoxLayout:
                orientation: 'vertical'
                padding: [10,100,10,10] 
                MDFloatingActionButton:
                    id:                    float_act_btn
                    icon:                'plus'
                    opposite_colors:    True
                    elevation_normal:    8
                    pos_hint:            {'center_x': .9, 'top': 1.0}
                    on_press: root.manager.current = 'cadastrocliente'
                    
        MDBottomNavigationItem:
            name: 'Vendedor'
            text: "Vendedor"
            icon: 'face'
            BoxLayout:
                orientation: 'vertical'
                padding: [10,100,10,10] 
                MDFloatingActionButton:
                    id:                    float_act_btn
                    icon:                'plus'
                    opposite_colors:    True
                    elevation_normal:    8
                    pos_hint:            {'center_x': .9, 'top': 1.0}
                    on_press: root.manager.current = 'cadastrovendedor'
                    
        MDBottomNavigationItem:
            name: 'Fornecedor'
            text: "Fornecedor"
            icon: 'truck'
            id: bottom_navigation_desktop_1
            BoxLayout:
                orientation: 'vertical'
                padding: [10,100,10,10] 
                MDFloatingActionButton:
                    id:                    float_act_btn
                    icon:                'plus'
                    opposite_colors:    True
                    elevation_normal:    8
                    pos_hint:            {'center_x': .9, 'top': 1.0}
                    on_press: root.manager.current = 'cadastrofornecedor'
        MDBottomNavigationItem:
            name: 'Settings'
            text: "Configurações"
            icon: 'settings'
            id: bottom_navigation_desktop_2
            MDLabel:
                font_style: 'Body1'
                theme_text_color: 'Primary'
                text: "Cheese!"
                halign: 'center'